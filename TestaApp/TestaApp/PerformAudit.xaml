<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:customUI="clr-namespace:AuditAppPcl.CustomUI;assembly=AuditAppPcl"
             x:Class="AuditAppPcl.PerformAudit">
  <!--<Label FontSize="" FontAttributes="Bold"></Label>-->
  <ContentPage.Content>
    <Frame CornerRadius="5" OutlineColor="White" BackgroundColor="White" >
      <!--<StackLayout>-->
      <Grid BackgroundColor="White" >
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <customUI:AuditHeadingLabel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Text="AUDIT DETAILS" TextColor="#0C585C" FontSize="20" FontAttributes="Bold"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="1" Grid.Column="0" Text="Application Name:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="1" Grid.Column="1" Text="ApplicationName" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="1" Grid.Column="2" Text="Case Number:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="1" Grid.Column="3" Text="CaseNumber" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="2" Grid.Column="0" Text="Case Name:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="2" Grid.Column="1" Text="CaseName" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="2" Grid.Column="2" Text="Plot:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="2" Grid.Column="3" Text="Plot" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Text="AUDIT INFORMATION" TextColor="#0C585C" FontSize="20" FontAttributes="Bold"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="4" Grid.Column="0" Text="Name:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Text="UserName" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="5" Grid.Column="0" Text="Status:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Text="Stutus" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="6" Grid.Column="0" Text="Evaluator/Auditor:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Text="Auditor" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="7" Grid.Column="0" Text="On Behalf of builder:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditEntry Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" x:Name="authority" HeightRequest="50"
                                       Placeholder="Authority"
                                       HorizontalTextAlignment="Center" TextColor="#0C585C" PlaceholderTextColor="#0C585C"
                                     ></customUI:AuditEntry>
        <customUI:AuditHeadingLabel Grid.Row="8" Grid.Column="0" Text="Date:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" Text="Date" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="9" Grid.Column="0" Text="Audit Number:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="3" Text="AuditNumber" TextColor="#A4BCBC" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditHeadingLabel Grid.Row="10" Grid.Column="0" Text="Comment/Remarks:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <customUI:AuditEntry Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3" x:Name="comment" HeightRequest="50"
                                       Placeholder="type comment/remark here"
                                       HorizontalTextAlignment="Center" TextColor="#0C585C" PlaceholderTextColor="#0C585C"
                                     ></customUI:AuditEntry>
        <customUI:AuditHeadingLabel Grid.Row="11" Grid.Column="0" Text="Pictures:" TextColor="#005D60" FontSize="20"></customUI:AuditHeadingLabel>
        <StackLayout Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3">
          <Button x:Name="TakePictureButton" Clicked="TakePictureButton_Clicked" BackgroundColor="Black" Text="Take from Camera"></Button>
          <ListView x:Name="listView">
            <ListView.ItemTemplate>
              <DataTemplate>
                <ViewCell>
                  <Image HeightRequest="240" Source="{Binding path}"></Image>
                  <customUI:AuditEntry Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3" HeightRequest="50"
                                       Placeholder="comment" Text="{Binding }"
                                       HorizontalTextAlignment="Center" TextColor="#0C585C" PlaceholderTextColor="#0C585C"
                                     ></customUI:AuditEntry>
                </ViewCell>
              </DataTemplate>
            </ListView.ItemTemplate>
          </ListView>
        </StackLayout>
      </Grid>
      <!--
           
          </StackLayout>
        </StackLayout>
      </StackLayout>-->
    </Frame>
