<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuditAppPcl.ListAudits">
    <!--<ContentPage.Content>-->
  <ContentPage.Content>
    <StackLayout Spacing="10" x:Name="layout">
      <Button Text="Click" VerticalOptions="Start"
        HorizontalOptions="FillAndExpand" Clicked="OpenCameraPage" />
      <Button Text="Open Signature" VerticalOptions="Start"
        HorizontalOptions="FillAndExpand" Clicked="OpenSignaturePage" />
      <ListView x:Name="listView">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <Label Text="{Binding userId}"></Label>
              <Label Text="{Binding body}"></Label>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>