<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuditAppPcl.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Padding="10,40,10,10">
            <Image HorizontalOptions="Center" VerticalOptions="Center" Source="Logo"></Image>
            <Label HorizontalOptions="Center" x:Name="messageLabel" />
            <Label FontSize="Medium" Text="Username" />
            <Entry x:Name="usernameEntry" Placeholder="Username" />
            <Label FontSize="Medium" Text="Password" />
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="Password" />
            <Button HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" WidthRequest="200" 
                    HeightRequest="50"  FontSize="Medium" BackgroundColor="Green" Text="Login" Clicked="OnLogin" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>